<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/top</item>
        <item name="colorPrimaryDark">@color/top</item>
        <item name="colorAccent">@color/top</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash</item>
        <item name="colorPrimary">@color/top</item>
        <item name="colorPrimaryDark">@color/top</item>
        <item name="colorAccent">@color/top</item>
        <item name="android:statusBarColor">@color/top</item>
    </style>
</resources>
